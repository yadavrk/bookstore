<p id="notice"><%= notice %></p>
<h1>Books</h1>
<table class="table table-striped">
  <thead>
  <tr>
    <th scope="col">Id</th>
    <th scope="col">Title</th>
    <th scope="col">Authors</th>
    <th scope="col">Actions</th>
  </tr>
  </thead>
  <tbody>
  <% @books.each do |book| %>
    <tr>
      <th scope="row"><%= book.id %></th>
      <td><%= book.title %></td>
      <td>
        <% book.authors.each do |author| %>
          <span><%= link_to author.first_name, author %>,</span>
        <% end %>
      </td>
      <td>
        <span><%= link_to 'Show', book %></span>
        <span><%= link_to 'Edit', edit_book_path(book) %></span>
        <span><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></span>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
<%= link_to 'New Book', new_book_path %>
